<p id="notice"><%= notice %></p>

<div class="tinyfier container">
  <div class="header">
    <h1 class="text-center">Tiny Urls</h1>
    <h5 class="text-center">Generate a tinyfied version of your URL</h5>
  </div>

  <%= form_for @link, url: {controller: "links", action: "create"}, html: {class: "clearfix"}, remote: true do |f| %>
  <div class="input-group">
    <%= f.text_field :original, class: "form-control", placeholder: "Paste a link to shorten it" %>
    <span class="input-group-btn">
      <%= f.submit "Tinify!", class: "form-control btn btn-primary" %>
    </span>
  </div>
  <% end %>
</div>

<div class="tinyfied container">
  <div class="input-group">
    <input type="text" class="form-control" aria-label="..." disabled>
    <div class="input-group-btn">
      <button class="btn btn-default"><span class="glyphicon glyphicon-copy"></span></button>
      <button class="btn btn-primary"><span class="glyphicon glyphicon-folder-open"></span></button>
    </div>
  </div>
</div>
